<Window x:Class="HungVuong_C5_Assignment.UserMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HungVuong_C5_Assignment"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Name="mainWindow"
        Visibility="Visible"
        WindowState="Maximized"
        Title="MainMenu1" Height="1000" Width="1000">
    <Window.Resources>
        <Style x:Key="PageTitleHeaderStyle" TargetType="Control">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Grid>
                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        MouseLeftButtonUp="StackPanel_MouseLeftButtonUp">
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <Image Source="/Images/User.png" Width="50" Height="30" Margin="10"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                                    <TextBlock Text="User" VerticalAlignment="Center" Margin="0 0 10 0"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                               Loaded="TextBlock_Loaded"/>
                                </StackPanel>
                                <Grid Background="LightGray" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <local:ucUserInfoShow x:Name="ucUserInfo"/>

                                    <Button Grid.Row="1"
                                            Content="Logout"
                                            Width="100"
                                            Height="25"
                                            Margin="0 0 0 10"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="Button_Click"
                                            Style="{StaticResource ButtonBasicStyle}"
                                            Background="Transparent"
                                            Foreground="#0C1C2F"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Background="#0C1E35"
              Name="grdContainer">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Image Source="/Images/2.jpg"
                   Width="230"
                   Height="200">
            </Image>

            <TreeView Name="TreeView"
                      Grid.Row="1"
                      Background="#0C1E35"
                      BorderThickness="0">
                <TreeViewItem Header="Management"
                              Tag="/Images/5.png" IsExpanded="True"
                              Name="tvManagement"
                              Background="#0C1C2F">
                </TreeViewItem>
            </TreeView>
        </Grid>

        <Grid Name="grdMain" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            
        </Grid>

