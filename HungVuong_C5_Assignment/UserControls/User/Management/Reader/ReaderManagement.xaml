<UserControl x:Class="HungVuong_C5_Assignment.ReaderManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HungVuong_C5_Assignment"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Reader Management"
               FontSize="20"
               FontWeight="Bold"
               HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Style="{StaticResource FloatingLabelTextBoxStyle}"
                     Tag="Search"
                     Name="txtSearch"
                     TextChanged="txtSearch_TextChanged"
                     Grid.Column="3"/>

            <Button Grid.Column="2"
                    Content="Add Reader"
                    Margin="10 0"
                    Width="125"
                    Height="23"
                    Name="btnAdd"
                    FontWeight="SemiBold"
                    Click="btnAdd_Click"
                    HorizontalAlignment="Right"
                    FontSize="12"/>

            <Button Grid.Column="1"
                    Content="Transitioning Child"
                    Margin="10 0"
                    Width="125"
                    Height="23"
                    Name="btnTransitioningChild"
                    FontWeight="SemiBold"
                    Click="btnTransitioningChild_Click"
                    HorizontalAlignment="Right"
                    FontSize="12"/>

            <ToggleButton Grid.Column="0"
                          Height="28"
                          Name="toggleButton"
                          Checked="toggleButton_Checked"
                          Unchecked="toggleButton_Unchecked"
                          Tag="Restore"
                          HorizontalAlignment="Left"/>
        </Grid>

        <local:ucReaderAndIdentifyDataGrid Grid.Row="2" 
                                           x:Name="ucReader"/>
    </Grid>
</UserControl>
